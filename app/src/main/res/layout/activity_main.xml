<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2495d1"
    android:orientation="vertical"
    android:weightSum="8"
    tools:context="mg.studio.weatherappdesign.MainActivity">

    <TextView
        android:id="@+id/tv_weekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Sunday"
        android:textAllCaps="true"
        android:textColor="#80000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_weekday"
        app:srcCompat="@drawable/notification" />

    <TextView
        android:id="@+id/tv_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="You have 1 appointment"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_selector"
        android:gravity="center"
        android:onClick="btnClick"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="Update weather "
        android:textColor="#50ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_news" />


    <ImageView
        android:id="@+id/weather_condition_1"
        android:layout_width="94dp"
        android:layout_height="77dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="264dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rainy_up" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:text="Location"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_condition_1" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:text="03/03/2018"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_location" />


    <TextView
        android:id="@+id/temperature_of_the_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:gravity="right"
        android:text="28"
        android:textColor="@android:color/white"
        android:textSize="72sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="31dp"
        android:layout_height="35dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:gravity="right"
        android:text="Â°C"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="89dp"
        android:layout_marginTop="420dp"
        android:scaleType="fitXY"
        android:src="@drawable/design"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="582dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:weightSum="4"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="0dp">


        <ImageView
            android:id="@+id/weather_condition_2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            app:layout_constraintEnd_toStartOf="@+id/weather_condition_3"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rainy_small" />

        <TextView
            android:id="@+id/weekday2"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:text="mon"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/weekday3"
            app:layout_constraintTop_toBottomOf="@+id/weather_condition_2" />


        <ImageView
            android:id="@+id/weather_condition_3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            app:layout_constraintEnd_toStartOf="@+id/weather_condition_4"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/partly_sunny_small" />

        <TextView
            android:id="@+id/weekday3"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:text="tue"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/weekday4"
            app:layout_constraintTop_toBottomOf="@+id/weather_condition_3" />


        <ImageView
            android:id="@+id/weather_condition_4"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            app:layout_constraintEnd_toStartOf="@+id/weather_condition_5"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/windy_small" />

        <TextView
            android:id="@+id/weekday4"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:text="thu"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/weekday5"
            app:layout_constraintTop_toBottomOf="@+id/weather_condition_4" />


        <ImageView
            android:id="@+id/weather_condition_5"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sunny_small" />

        <TextView
            android:id="@+id/weekday5"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:gravity="center"
            android:text="fri"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weather_condition_5" />

        <TextView
            android:id="@+id/temp_of_second_day"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:text="temp1"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/temp_of_third_day"
            app:layout_constraintTop_toBottomOf="@+id/weekday2" />

        <TextView
            android:id="@+id/temp_of_third_day"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:text="temp2"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/temp_of_fourth_day"
            app:layout_constraintTop_toBottomOf="@+id/weekday3" />

        <TextView
            android:id="@+id/temp_of_fourth_day"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:gravity="center"
            android:text="temp3"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/temp_of_fifth_day"
            app:layout_constraintTop_toBottomOf="@+id/weekday4" />

        <TextView
            android:id="@+id/temp_of_fifth_day"
            android:layout_width="64dp"
            android:layout_height="30dp"
            android:layout_marginEnd="36dp"
            android:layout_marginRight="36dp"
            android:gravity="center"
            android:text="temp4"
            android:textAllCaps="true"
            android:textColor="#909090"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weekday5" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
